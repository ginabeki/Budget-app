<h1 class="text-center text-green-custom text-3xl">Create New Category</h1>

<%= form_for @group, html: { class: "flex flex-col gap-4 m-8" }  do |f| %>
  <div class="flex flex-col gap-2">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="flex flex-col gap-2">
    <%= f.label :icon %>
    <%= f.text_field :icon %>
  </div>
    <div>
  <%= f.label :created_at %><br>
  <%= f.datetime_select :created_at, { :discard_hour => true, :discard_minute => true, :discard_second => true }, { :class => "" } %>
</div>

  <%= f.submit "Create Group", class: " p-1 inline-flex justify-center items-center border border-green-custom w-32 cursor-pointer text-teal-900" %>
<% end %>
